<Root>:
    orientation:'vertical'
    label:lbl
    NavigationLayout:
        id:nav_layout
        MDNavigationDrawer:
            NavigationDrawerIconButton:
                text:'main_screen'
                on_release:
                    screen_manager.current = 'main_screen'
            NavigationDrawerIconButton:
                text:'history_screen'
                on_release:
                    screen_manager.current = 'history_screen'
            NavigationDrawerIconButton:
                text:'Help'
                on_release:
                    screen_manager.current = 'help'
        BoxLayout:
            orientation:'vertical'
            MDToolbar:
                title:'ded maksim'
                md_bg_color:app.theme_cls.primary_color
                left_action_items:[['menu', lambda x: nav_layout.toggle_nav_drawer() ]]

            ScreenManager:
                id: screen_manager
                Screen:
                    padding:10
                    name:'main_screen'
                    FloatLayout:

                        MDRaisedButton:
                            text:'M'
                            size_hint:(0.10, 0.08)
                            pos_hint:{'center_x': 0.5, 'center_y':0.55}
                            background_color:196, 134, 20, 1
                            on_press:
                                root.priem()


                        MDLabel:
                            id:lbl
                            text:'That yours pokazania'
                            size_hint:1, 0.5
                            pos_hint:{'center_x': 0.5, 'center_y':0.5}
                            halign:'left'
                            font_size:15
                            color:0,0,0,1
                            text_size:self.size

                Screen:
                    name:'history_screen'
                    BoxLayout:
                        orientation:'vertical'
                        MDLabel:
                            text:'Здесь будет иcтория ваших показаний'
                            font_size:16
                            halign:'left'
                            valign:'top'
                            text_size:self.size

                Screen:
                    name:'help'
                    BoxLayout:
                        orientation:'vertical'
                        MDLabel:
                            text:'Показания следует передавать в виде:  тип показания + количество'
                            font_size:16
                            halign:'left'
                            valign:'top'
                            text_size:self.size


