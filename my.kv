<Root>:
    orientation:'vertical'
    label:lbl
    NavigationLayout:
        id:nav_layout
        MDNavigationDrawer:
            NavigationDrawerIconButton:
                text:'Сдать показания'
                on_release:
                    screen_manager.current = main.name
            NavigationDrawerIconButton:
                text:'История показаний'
                on_release:
                    screen_manager.current = history.name
            NavigationDrawerIconButton:
                text:'Помощь'
                on_release:
                    screen_manager.current = help.name
            NavigationDrawerIconButton:
                text:'Реклама'
                on_release:
                    screen_manager.current = pokazania.name
        BoxLayout:
            orientation:'vertical'
            MDToolbar:
                title:'Дедушка Максимильян'
                md_bg_color:app.theme_cls.primary_color
                left_action_items:[['menu', lambda x: nav_layout.toggle_nav_drawer() ]]

            ScreenManager:
                id: screen_manager
                Screen:
                    id: main
                    padding:10
                    name:'Сдать показания Максиму'
                    FloatLayout:

                        MDRaisedButton:
                            text:'M'
                            size_hint:(0.10, 0.08)
                            pos_hint:{'center_x': 0.5, 'center_y':0.55}
                            background_color:196, 134, 20, 1
                            on_press:
                                root.priem()


                        MDLabel:
                            id:lbl
                            text:'Это ваши показания'
                            size_hint:1, 0.5
                            pos_hint:{'center_x': 0.5, 'center_y':0.5}
                            halign:'left'
                            font_size:15
                            color:0,0,0,1
                            text_size:self.size

                Screen:
                    id: history
                    name:'История показаний'
                    BoxLayout:
                        orientation:'vertical'
                        MDLabel:
                            text:'Здесь будет иcтория ваших показаний'
                            font_size:16
                            halign:'left'
                            valign:'top'
                            text_size:self.size

                Screen:
                    id: help
                    name:'Помощь'
                    BoxLayout:
                        orientation:'vertical'
                        MDLabel:
                            text:'Нажмите на кнопку  для того, чтобы начать разговор с Максимом' + '\n' + 'Показания следует передавать в виде:  тип показания + количество'
                            font_size:16
                            halign:'left'
                            valign:'top'
                            text_size:self.size

                Screen:
                    id: pokazania
                    name:'Показания, которые мне нужно сдавать'
                    BoxLayout:
                        orientation:'vertical'
                        FloatLayout:
                            CheckBox:
                                active:True
                                size_hint:0.1, 0.1
